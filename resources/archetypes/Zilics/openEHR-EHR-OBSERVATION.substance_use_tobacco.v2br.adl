															DV_TEXT matches {*}
														}
													}
													ELEMENT[at0023] occurrences matches {0..1} matches {	-- Utilização plena do agente
														value matches {
															DV_BOOLEAN matches {
																value matches {True, False}
															}
														}
													}
													ELEMENT[at0024] occurrences matches {0..1} matches {	-- Comentário
														value matches {
															DV_CODED_TEXT matches {
																defining_code matches {[local::]}
															}
														}
													}
												}
											}
											ELEMENT[at0021] occurrences matches {0..1} matches {	-- Resultado
												value matches {
													DV_CODED_TEXT matches {
														defining_code matches {
															[local::
															at0035, 	-- Falha
															at0036, 	-- Sucesso
															at0037]	-- Sucesso  com reincidência
														}
													}
												}
											}
										}
									}
									CLUSTER[at0.42] occurrences matches {0..1} matches {	-- Exposição à fumaça
										items cardinality matches {0..*; unordered} matches {
											ELEMENT[at0.43] occurrences matches {0..1} matches {	-- Membros da família fumam
												value matches {
													DV_CODED_TEXT matches {
														defining_code matches {
															[local::
															at0.44, 	-- Hoje
															at0.45]	-- No Passado
														}
													}
												}
											}
											ELEMENT[at0.46] occurrences matches {0..1} matches {	-- Exposição no local de trabalha
