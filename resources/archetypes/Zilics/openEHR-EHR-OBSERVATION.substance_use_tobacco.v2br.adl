														defining_code matches {
															[local::
															at0028, 	-- Regular
															at0029]	-- Irregular
														}
													}
												}
											}
											CLUSTER[at0030] occurrences matches {0..1} matches {	-- Consumo
												items cardinality matches {0..*; unordered} matches {
													ELEMENT[at0.64] occurrences matches {0..1} matches {	-- Consumo médio
														value matches {
															C_DV_QUANTITY <
																property = <[openehr::128]>
																list = <
																	["1"] = <
																		units = <"Diário">
																	>
																	["2"] = <
																		units = <"Semanal">
																	>
																	["3"] = <
																		units = <"Mensal">
																	>
