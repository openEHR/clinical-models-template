													DV_CODED_TEXT matches {
														defining_code matches {
															[local::
															at0.38, 	-- Cigarro
															at0.39, 	-- Charuto
															at0.40]	-- Cachimbo
														}
													}
												}
											}
											ELEMENT[at0005] occurrences matches {0..1} matches {	-- Status
