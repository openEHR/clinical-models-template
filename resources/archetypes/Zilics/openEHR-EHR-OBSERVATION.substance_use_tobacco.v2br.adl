																property = <[openehr::124]>
																list = <
																	["1"] = <
																		units = <"gm">
																	>
																	["2"] = <
																		units = <"oz(avdp)">
																	>
																>
															>
														}
													}
													ELEMENT[at0009] occurrences matches {0..1} matches {	-- Consumo médio diário
														value matches {
															DV_COUNT matches {*}
															C_DV_QUANTITY <
															>
														}
													}
													ELEMENT[at0034] occurrences matches {0..1} matches {	-- Consumo máximo diário
														value matches {
															DV_COUNT matches {*}
